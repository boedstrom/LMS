@model LMS.Models.AddUserViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Students for course @Html.DisplayFor(model => model.CourseName)</h2>
<table class="table">
    <tr>
        <th>
            Course duration: @Convert.ToDateTime(Model.CourseStart).ToString("yyyy-dd-MM") -
            @Convert.ToDateTime(Model.CourseEnd).ToString("yyyy-dd-MM")
        </th>
    </tr>
</table>
<p>
    @Html.ActionLink("Register new student", "Create", new { id = Model.CourseId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.First().Email)
        </th>
