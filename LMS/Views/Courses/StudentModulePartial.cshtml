@model LMS.Models.ShowModulesViewModel
@{
    ViewBag.Title = "Index";
}
<h4>Modules</h4>
<table class="table">
    <colgroup>
        <col class="col-md-1">
        <col class="col-md-3">
        <col class="col-md-1">
        <col class="col-md-2">
        <col class="col-md-2">
        <col class="col-md-1">
        <col class="col-md-1">
    </colgroup>
    <tbody>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modules.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modules.First().Description)
            </th>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modules.First().StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modules.First().EndDate)
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model.Modules)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                </td>
                <td>
                    @Html.ActionLink("Documents", "ShowModuleDocuments", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
