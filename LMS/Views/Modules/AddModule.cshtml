@model LMS.Models.AddModuleViewModel
@{
    ViewBag.Title = "AddModule";
}

<h2>Add Module to course</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayFor(model => model.CourseName)
        </th>
    </tr>
</table>
    <p>
        @Html.ActionLink("Create New Module", "Create", new { id = Model.CourseId })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modules.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modules.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modules.First().StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modules.First().EndDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Modules)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.ActionLink("Add Activities", "AddActivity", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
